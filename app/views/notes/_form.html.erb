<%= simple_form_for(@note) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :content , :maxlength => 25 , placeholder: ":)", required: true %>
	    <%= f.hidden_field :user_id %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
<% end %>
