
<% content_for :head do  %>
<% stylesheet_link_tag    'sessions', media: 'all', 'data-turbolinks-track' => true %>

<style>
body{
  background: image-url('fridge-ed8a64f8f0ef5e90803242adcc1874343004c242c35b827b6f0429503ab1c58c.png');
  background-size: cover;
  background-repeat: no-repeat;
}
</style>
<div>
  <div class="log_in_container">
    <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
  <%= link_to "Sign Up", new_user_registration_path %>
    </div>
  <% end %>
  </div>
  <div class="footer">
  <p>WeDo - Lifes To Do List App &#169 Tech Talent South</p>
  </div>

<% end %>